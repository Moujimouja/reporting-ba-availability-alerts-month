<configs>
        <title>Application availability</title>
        <author>Centreon</author>
        <email>contact@centreon.com</email>
        <website>http://www.centreon.com</website>
        <description>Widget displaying application availability (Centreon BAM required)</description>
        <version>1.0.0</version>
        <keywords>centreon, widget, application, availability, bam, monitoring</keywords>
        <screenshot></screenshot>
        <thumbnail>./widgets/reporting-ba-availability-alerts-month/resources/centreon-logo.png</thumbnail>
        <url>./widgets/reporting-ba-availability-alerts-month/index.php</url>
        <autoRefresh>10</autoRefresh>
        <preferences>        	
        	<preference label="Application" name="ba_name" defaultValue="Mail App." type="host" header="Resource"/>
        	<preference label="Graph period" name="graph_period" type="list" header="Filter">
				<option value="604800" label="Last 7 days"/>
				<option value="1209600" label="Last 14 days"/>
				<option value="5184000" label="Last month"/>				
				<option value="5184000" label="Last 2 months"/>
				<option value="10368000" label="Last 4 months"/>
				<option value="15552000" label="Last 6 months"/>
				<option value="31104000" label="Last 12 months"/>
			</preference>
			<preference label="Refresh Interval (seconds)" name="refresh_interval" defaultValue="43200" type="text" header="Misc"/>			
        </preferences>        
</configs>
